<struts>
	<constant name="struts.action.extension" value="" />

	<constant name="struts.devMode" value="true" />

	<constant name="struts.multipart.saveDir"
		value="webapp/assets/excel" />

	<!-- <constant name="struts.multipart.parser" value="jakarta-stream" /> -->

	<package name="com.tpv.model"
		extends="struts-default, json-default" namespace="/product">
		<interceptors>
			<interceptor name="authenticationInterceptor"
				class="com.tpv.interceptor.AuthenticationInterceptor"></interceptor>
			<interceptor-stack name="secureStack">
				<interceptor-ref name="authenticationInterceptor" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>
		</interceptors>

		<action name="login">
			<result>WEB-INF/pages/login.jsp</result>
			<result name="success" type="redirectAction">
				<param name="actionName">login</param>
				<param name="namespace">/</param>
			</result>
			<result name="input">WEB-INF/pages/login.jsp</result>
		</action>

		<action name="loginAction"
			class="com.tpv.controller.login.LoginAction" method="execute">
			<result name="success" type="redirectAction">
				<param name="actionName">listUser</param>
				<param name="namespace">/</param>
			</result>
			<result name="input">WEB-INF/pages/login.jsp</result>
		</action>

		<action name="logout"
			class="com.tpv.controller.login.LogoutAction">
			<result name="success" type="redirectAction">
				<param name="actionName">login</param>
				<param name="namespace">/</param>
			</result>
		</action>

		<action name="product">
			<interceptor-ref name="secureStack" />
			<result>/WEB-INF/pages/product.jsp</result>
			<result name="success" type="redirectAction">
				<param name="actionName">product</param>
				<param name="namespace">/</param>
			</result>
			<result name="login">/WEB-INF/pages/login.jsp</result>
		</action>

		<action name="getAllProduct" method="getAllProduct"
			class="com.tpv.controller.product.ProductAction">
			<interceptor-ref name="secureStack" />
			<result type="json">
				<param name="root">products</param>
			</result>
			<result name="login">/WEB-INF/pages/login.jsp</result>
		</action>

		<action name="getProductBySale" method="getProductBySale"
			class="com.tpv.controller.product.ProductAction">
			<interceptor-ref name="secureStack" />
			<result type="json">
				<param name="root">products</param>
			</result>
			<result name="login">/WEB-INF/pages/login.jsp</result>
		</action>

		<action name="deleteProductById"
			class="com.tpv.controller.product.ProductAction"
			method="setIsDeleteProductById">
			<interceptor-ref name="secureStack" />
			<result name="success" type="redirectAction">
				<param name="actionName">product</param>
				<param name="namespace">/</param>
			</result>
			<result name="login">WEB-INF/pages/login.jsp</result>
		</action>

		<action name="createProduct"
			class="com.tpv.controller.product.ProductAction"
			method="createProduct">
			<interceptor-ref name="secureStack" />
			<result name="success" type="redirectAction">
				<param name="root">products</param>
			</result>
			<result name="login">/WEB-INF/pages/login.jsp</result>
		</action>

		<action name="getProductByPrice"
			class="com.tpv.controller.product.ProductAction"
			method="getProductByPrice">
			<interceptor-ref name="secureStack" />
			<result type="json">
				<param name="root">products</param>
			</result>
			<result name="login">/WEB-INF/pages/login.jsp</result>
		</action>
	</package>


