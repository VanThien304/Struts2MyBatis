<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="Customer">
	<resultMap id="result" type="Customer">
		<result property="customerId" column="customer_id" />
		<result property="customerName" column="customer_name" />
		<result property="email" column="email" />
		<result property="telNum" column="tel_num" />
		<result property="address" column="address" />
		<result property="isActive" column="is_active" />
	</resultMap>


	<select id="selectCustomer" resultType="Customer">
		SELECT * FROM mst_customer;
	</select>
	
	<select id="getAllCustomer" resultMap="result">
		SELECT * FROM mst_customer;
	</select>

	<insert id="insertCustomer" parameterType="Customer">
		INSERT INTO mst_customer (customer_name, email, tel_num, address, is_active) 
 		VALUES (#{customerName}, #{email}, #{telNum}, #{address}, #{isActive});
	</insert>

</mapper> 